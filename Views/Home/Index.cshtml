@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-3 fw-bold text-primary mb-4"> Movie Manager </h1>
     <p class="lead text-muted mb-5" style="max-width: 600px; margin: 0 auto;">
        Organize, rate, and track your movie collection in one place.
    </p>
</div>
<div class="bg-light rounded-3 p-4" style="max-width: 400px; margin: 0 auto;">
        <div class="d-grid gap-2">
            <a asp-controller="Login" asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-box-arrow-in-right me-2"></i>Login
            </a>
            <a asp-controller="Register" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-person-plus me-2"></i>Register
            </a>
        </div> 
</div>
